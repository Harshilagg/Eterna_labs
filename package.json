{
  "name": "order-exec-engine",
  "version": "1.0.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "worker": "ts-node src/workers/orderWorker.ts",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node dist/server.js",
  "test": "jest --runInBand --detectOpenHandles",
  "test:unit": "NODE_ENV=test jest --runInBand --detectOpenHandles",
  "test:integration": "RUN_INTEGRATION=1 NODE_ENV=test jest --runInBand",
  "migrate": "node scripts/migrate.js",
  "seed": "node scripts/seed.js",
  "migrate:down": "node scripts/rollback.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "start:all": "npm run docker:up && npm run dev & npm run worker &",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@fastify/websocket": "^7.1.3",
    "bullmq": "^1.91.1",
    "dotenv": "^16.0.3",
    "fastify": "^4.22.0",
    "ioredis": "^5.8.2",
    "pg": "^8.11.0",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20.2.5",
    "@types/pg": "^8.6.8",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.4",
    "eslint": "^8.44.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "ws": "^8.18.3"
  }
}
