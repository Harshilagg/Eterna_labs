{
  "info": {
    "name": "Order Execution Engine",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Execute Order (market)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"type\": \"market\",\n  \"amount\": 1,\n  \"symbol\": \"TOKEN\"\n}"
        },
        "url": {
          "raw": "http://localhost:3001/api/orders/execute",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api","orders","execute"]
        }
      }
    },
    {
      "name": "Get Job",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3001/jobs/:id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["jobs", ":id"]
        }
      }
    },
    {
      "name": "WebSocket (open in WS client)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "ws://localhost:3001/ws",
          "protocol": "ws",
          "host": ["localhost"],
          "port": "3001",
          "path": ["ws"]
        }
      }
    }
  ]
}
